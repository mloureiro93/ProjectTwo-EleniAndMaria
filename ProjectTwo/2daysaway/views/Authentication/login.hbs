<body id="login-background">


  <div class="container-fluid">


    <div class="row">
      <div class="col-md-4 col-sm-4 col-xs-12"></div>
      <div class="col-md-4 col-sm-4 col-xs-12">
        <form class=" form-container login-form text-center " action="/login" method="POST">
          <h1 class="mb-5 text-uppercase">Login</h1>
          <div class="form-group  login-container">
            <div>
              <input type="text" class="form-control" id="input-username" name="username" placeholder="Your Username" />
            </div>
            <div>
              <input type="password" class="form-control" name="password" id="input-password" placeholder="Password" />
            </div>
          </div>

          <button type="submit" class="btn btn-custom btn-block">Login</button>
         
          <p class="mt-3 font-weight-strong "> Don't have an account yet? <a href="sign-up">Sign-Up Here!</a> </p>

        </form>

        {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
        {{/if}}
      </div>
      <div class="col-md-4 col-sm-4 col-xs-12"></div>

    </div>
  </div>

  </div>

</body>