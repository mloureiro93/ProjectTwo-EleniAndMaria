<div class="login-container d-flex align-items-center justify-content-center">
{{!-- <img src="https://cdn.pixabay.com/photo/2014/04/02/14/04/suitcase-306048_960_720.png" alt="logo"> --}}


<form class = "login-form text-center" action="/login" method="POST">
<h1 class="mb-5 font-weight-light text-uppercase">Login</h1>
<div class="form-group">
  <input type="text" class="form-control" id="input-username" name="username" placeholder="Your Username" />
  <input type="password" class="form-control" name="password" id="input-password" placeholder="A Strong Password" />
 </div> 

  <button type="submit" class="btn btn-primary btn-block">Login</button>
  <p class="mt-3 font-weight-normal"> Don't have an account yet? <a href="sign-up">Sign-Up Here!</a> </p>
 
</form>

{{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
{{/if}}

</div>