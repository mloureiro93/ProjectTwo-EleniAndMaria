<body class="trip-selection">
  
  <form action="/tripSelection" method="POST">
    <label for="input-travelingFrom">Where will you be Traveling from:</label>
    <input type="text" id="input-travelingFrom" name="travelingFrom" placeholder="Enter the city of your departure" />
    <button class="btn btn-custom">Find out where your next Adventure begins</button>
    {{#if city}}
    {{city.city_name}}
    <a href="/day1/{{city._id}}"><button class="btn-itinerary">Go to itinerary</button></a>
    {{/if}}
  </form>




  {{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}

</body>